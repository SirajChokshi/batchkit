---
import '../styles/global.css';
import Search from 'astro-pagefind/components/Search';

interface Props {
  title: string;
}

const { title } = Astro.props;
const currentPath = Astro.url.pathname;
const isPlayground = currentPath === '/';
const isDocs = currentPath.startsWith('/docs');
---

<!doctype html>
<html lang="en" class="bg-stone-950 text-stone-100 font-mono overscroll-none">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Google+Sans+Code:wght@400;500;600&display=swap" rel="stylesheet" />
    <title>{title}</title>
  </head>
  <body class="min-h-screen">
    <header class="sticky top-0 z-50 bg-stone-950">
      <div class="mx-auto max-w-7xl px-4 sm:px-6 xl:px-0 flex items-center gap-5 h-12 border-b border-stone-700">
        <span class="text-sm select-none font-medium text-stone-100 font-mono">[=] batchkit</span>
        <span class="text-stone-700">|</span>
        <nav class="flex items-center gap-4">
          <a href="/" class:list={["text-sm font-mono", isPlayground ? "text-stone-100" : "text-stone-500 hover:bg-stone-100 hover:text-stone-900"]}>playground</a>
          <a href="/docs" class:list={["text-sm font-mono", isDocs ? "text-stone-100" : "text-stone-500 hover:bg-stone-100 hover:text-stone-900"]}>docs</a>
        </nav>
        <div class="ml-auto flex items-center gap-4">
          {isDocs && (
            <div class="search-wrapper">
              <Search 
                id="search" 
                className="pagefind-ui" 
                uiOptions={{ 
                  showImages: false,
                  showSubResults: true,
                  resetStyles: true,
                }}
              />
            </div>
          )}
          <a 
            href="https://github.com/sirajchokshi/batchkit" 
            target="_blank" 
            rel="noopener noreferrer"
            class="text-stone-500 hover:text-stone-100"
            title="View on GitHub"
          >
            <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
              <path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z"/>
            </svg>
          </a>
        </div>
      </div>
    </header>
    <main class="mx-auto max-w-7xl px-4 sm:px-6 xl:px-0">
      <slot />
    </main>
  </body>
</html>
